<article class="listing">
    <a {{action 'toggleImageSize'}} class="image {{if isWide "wide"}}">
        <img src="{{restaurant.image}}" alt="">
        <small>View Larger</small>
    </a>
    <h3>{{#link-to "restaurants.show" restaurant}}{{restaurant.title}}{{/link-to}}</h3>
    <div class="detail address">
        <p><span>Address:</span> {{restaurant.address}}, {{restaurant.city}}</p>
    </div>
    <div class="detail type">
        <span>Type:</span> {{restaurant-type restaurant.type}} - {{restaurant.type}}
    </div>
    <div class="detail website">
        <p><span>Website: </span><a href="http://{{restaurant.website}}">{{restaurant.website}}</a></p>
    </div>

    <div class="detail telephone">
        <p><span>Telephone:</span> {{restaurant.telephone}}</p>
    </div>
</article>